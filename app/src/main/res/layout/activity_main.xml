<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAMPLE POST REQUEST"
        android:layout_centerHorizontal="true"
        android:onClick="onPostRequest"/>

    <Button
        android:id="@+id/btn_get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAMPLE GET REQUEST"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_post"
        android:onClick="onGetRequest"/>

    <Button
        android:id="@+id/btn_multipart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAMPLE MULTIPART REQUEST"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_get"
        android:onClick="onMultiPartRequest"/>

    <TextView
        android:id="@+id/response"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_multipart"
        android:layout_marginTop="10dp"/>

</RelativeLayout>
